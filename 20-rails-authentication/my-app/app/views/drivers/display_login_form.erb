<h1>Login</h1>
<%= form_with method: 'POST', url: '/drivers/authenticate' do | form | %>
    <div>
        <%= form.label :name %>
        <%= form.text_field :name %>
    </div>
    <div>
        <%= form.label :password %>
        <%= form.password_field :password %>
    </div>
    <%= form.submit %>
<% end %>